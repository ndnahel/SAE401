{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/mainCard.css') }}">
{% endblock %}

{% block title %}WeatherCompass{% endblock %}

{% block body %}
{{dump()}}
    <main>
        <div class="mainCard">
            <div class="date-container">
                <span class="when">Aujourd'hui</span>
                <span class="date">{{ "now"|date('l j F') }}</span>
            </div>
            <div class="weather-container">
                <img src="{{ asset('images/icons/' ~ default.weather[0].icon ~ '.svg') }}" alt="rain icon">
                <div class="weather">
                    <h2>{{ default.name }}</h2>
                    <span class="weather-text">{{ default.weather[0].description|capitalize }}</span>
                    <span class="weather-temp">{{ default.main.temp }}°C</span>
                </div>
            </div>

            <div class="mainCard-bottom">
                <div class="stats-container">
                    <img src="{{ asset('images/icons/rain.svg') }}" alt="wind icon">
                    <div class="statCard">
                        <span class="stat-title">Vitesse</span>
                        <span class="stat">{{ default.wind.speed }} m/s</span>
                    </div>
                    <div class="statCard">
                        <span class="stat-title">Direction</span>
                        <span class="stat">{{ default.wind.deg }}</span>
                    </div>
                    <img src="{{ asset('images/icons/rain.svg') }}" alt="rain icon">
                    <div class="statCard">
                        <span class="stat-title">Nuageux à</span>
                        <span class="stat">{{ default.clouds.all }}%</span>
                    </div>
                    <div class="statCard">
                        <span class="stat-title">Humidité</span>
                        <span class="stat">{{ default.main.humidity }}%</span>
                    </div>
                    <img src="{{ asset('images/icons/rain.svg') }}" alt="rain icon">
                    <div class="statCard">
                        <span class="stat-title">Lever</span>
                        <span class="stat">{{ default.sys.sunrise|date('H:i')  }}</span>
                    </div>
                    <div class="statCard">
                        <span class="stat-title">Coucher</span>
                        <span class="stat">{{ default.sys.sunset|date('H:i')  }}</span>
                    </div>
                </div>

                <div class="temp-container">
                    <div class="temp-feels">
                        <span class="temp-text">Ressenti</span>
                        <span class="temp-stat">{{ default.main.feels_like }}°C</span>
                    </div>
                    <div class="temp-wrapper">
                        <div class="tempCard">
                            <img src="{{ asset('images/icons/tmp_lowest.svg') }}" alt="low temperature icon">
                            <span class="temp-title">Min.</span>
                            <span class="temp">{{ default.main.temp_min|number_format(1, '.', ',') }}°</span>
                        </div>
                        <div class="tempCard">
                            <img src="{{ asset('images/icons/tmp_highest.svg') }}" alt="high temperature icon">
                            <span class="temp-title">Max.</span>
                            <span class="temp">{{ default.main.temp_max|number_format(1, '.', ',') }}°</span>
                        </div>
                        <div class="uvCard">
                            <span class="temp-title">UV</span>
                            <span class="temp">6</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <h2>Aujourd'hui en France</h2>
        <div class="weatherCard-container">
            {% include 'components/weatherCard.html.twig' with {
                city: 'Paris'
            } %}
        </div>
    </main>
{% endblock %}
